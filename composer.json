{
    "name": "weijiajia/decrypt-verification-code",
    "description": "A PHP package for decoding CAPTCHA verification codes using the jfbym.com cloud service API",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "captcha",
        "verification",
        "decode",
        "api",
        "jfbym"
    ],
    "authors": [
        {
            "name": "weijiajia",
            "email": "shadowmatthew1025@gmail.com"
        }
    ],
    "require": {
        "saloonphp/saloon": "^3.0",
        "php": "^8.0",
        "weijiajia/saloonphp-logs-plugin": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "Weijiajia\\DecryptVerificationCode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Weijiajia\\DecryptVerificationCode\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs",
        "fix-style": "phpcbf",
        "analyse": "phpstan analyse"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
